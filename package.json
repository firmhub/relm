{
  "name": "relm",
  "description": "Composable components",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyperfinite/relm.git"
  },
  "scripts": {
    "test": "env BABEL_ENV=testing ava",
    "dev": "./parallel.sh 'watch' 'test -- -w'",
    "watch": "webpack-dev-server",
    "clean": "rm -rf ./dist/**.js ./dist/**.map",
    "unstage": "git update-index --assume-unchanged ./dist/**.js ./dist/**.map",
    "stage": "git update-index --no-assume-unchanged ./dist/**.js ./dist/**.map",
    "build": "env NODE_ENV=production node webpack.js"
  },
  "keywords": [
    "frontend",
    "component",
    "framework",
    "inferno",
    "redux",
    "elm",
    "architecture"
  ],
  "author": "Amandeep Singh Othi <a-s-o@users.noreply.github.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hyperfinite/relm/issues"
  },
  "homepage": "https://github.com/hyperfinite/relm#readme",
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "*",
    "babel-eslint": "*",
    "babel-loader": "*",
    "babel-plugin-lodash": "*",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015": "*",
    "babel-register": "*",
    "classnames": "^2.2.5",
    "csjs": "^1.0.5",
    "diff": "^2.2.3",
    "eslint": "*",
    "eslint-config-airbnb": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-jsx-a11y": "*",
    "eslint-plugin-react": "*",
    "graphql-tag": "^0.1.11",
    "inferno-create-element": "^0.7.16",
    "inferno-dom": "^0.7.16",
    "inferno-server": "^0.7.25",
    "insert-css": "^1.0.0",
    "json-loader": "^0.5.4",
    "lodash": "^4.13.1",
    "mkdirp": "^0.5.1",
    "pretty-format": "^3.5.2",
    "raw-loader": "^0.5.1",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "redux": "^3.5.2",
    "redux-logger": "^2.6.1",
    "replace": "^0.3.0",
    "sheet-router": "^3.1.1",
    "tcomb": "^3.2.8",
    "unminified-webpack-plugin": "^1.1.0",
    "webpack": "2.1.0-beta.21",
    "webpack-dev-server": "2.0.0-beta",
    "xhr": "^2.2.1"
  },
  "dependencies": {
    "babel-runtime": "^6.11.6",
    "path-to-regexp": "^1.5.3"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "source": [
      "src/**/*.{js,jsx}",
      "examples/**/*.{js,jsx}"
    ],
    "files": [
      "**/__tests__/*.js",
      "**/*.test.js",
      "!**/*_accepted.*"
    ]
  }
}
